<div class="container mt-5">
  <h3 class="mb-4">
    <%= @user.name %>'s <%= action_name.capitalize %>
  </h3>

  <% if @users.empty? %>
    <div class="alert alert-info" role="alert">
      ユーザーはいません。
    </div>
  <% else %>
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <%= link_to user_path(user) do %>
              <div class="card-body text-center">
                <%= image_tag user.get_profile_image(100, 100), class: "rounded-circle mb-2", alt: "#{user.name}'s profile image" %>
                <h5 class="card-title mb-2"><%= user.name %></h5>
                <p class="card-text mb-1">
                  フォロー：<%= user.following.count %>｜フォロワー：<%= user.followers.count %>
                </p>
                <%= render 'follow_button', user: user %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
