<% if flash[:success] %>
  <div class="success">
    <%= flash[:success] %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/book', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-striped">
        <% @books.each do |book| %>
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100), class:"mt-3 "; %>
              <% end %>
              <h5 class="card-text"><%= link_to book.title, book_path(book.id) %></h5>
              <p class="card-text"><%= book.body %></p>
              <% if book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(book), method: :delete do %>
                  <span class= "text-danger">
                    <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
                  </span>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(book), method: :post do %>
                  <span class= "text-text-primary">
                    <i class="fa-regular fa-heart"></i><%= book.favorites.count %>
                  </span>
                <% end %>
              <% end %>
              <p><%= "コメント数：#{book.book_comments.count} " %></p>
            </div>
          </div>
        <% end %>
      </table>
    </div>
  </div>
</div>
