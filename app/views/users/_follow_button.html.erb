<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= button_to 'Unfollow',
                  relationship_path(current_user.active_relationships.find_by(followed_id: user.id)),
                  method: :delete,
                  class: "btn btn-sm btn-outline-danger",
                  data: { turbo: false } %>
  <% else %>
    <%= button_to 'Follow',
                  relationships_path,
                  method: :post,
                  params: { followed_id: user.id },
                  class: "btn btn-sm btn-outline-primary",
                  data: { turbo: false } %>
  <% end %>
<% end %>
