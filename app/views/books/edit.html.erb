<% if @book.errors.any? %> 
  <h3><%= @book.errors.count %> errors occurred</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %> 
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<h1>Editing Book</h1>
<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>
  
  <h4>body</h4>
  <%= f.text_area :body %>
  <br></br>
  
  <%= f.submit 'Update Book' %>
  <br></br>
  
  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to "Back", books_path %>

<% end %>