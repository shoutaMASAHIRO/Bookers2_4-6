<div id="comment-<%= comment.id %>" class="mb-3 p-2 border rounded">
  <%= link_to user_path(comment.user.id) do %>
    <%= image_tag comment.user.get_profile_image(100, 100), class: "rounded-circle", size: "50x50" %><br>
    <strong><%= comment.user.name %></strong>
  <% end %>
  <p><%= comment.comment %></p>

  <% if comment.user == current_user %>
    <%= link_to "Destroy", book_book_comment_path(comment.book, comment),
                method: :delete,
                remote: true,
                data: { confirm: "削除しますか？" },
                class: "btn btn-sm btn-danger mt-2" %>
  <% end %>
</div>
