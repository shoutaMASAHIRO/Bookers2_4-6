<div class="container mt-5">
  <h2 class="mb-4">検索結果</h2>

  <% if @range == "User" %>
    <% if @users.present? && @users.any? %>
      <ul class="list-group mb-4">
        <% @users.each do |user| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= link_to user.name, user_path(user) %>
            <%= render 'follow_button', user: user %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="alert alert-info">該当するユーザーはいません。</div>
    <% end %>

  <% elsif @range == "Book" %>
    <% if @books.present? && @books.any? %>
      <ul class="list-group mb-4">
        <% @books.each do |book| %>
          <li class="list-group-item">
            <strong><%= link_to book.title, book_path(book) %></strong><br>
            <small>投稿者: <%= link_to book.user.name, user_path(book.user) %></small>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="alert alert-info">該当する投稿はありません。</div>
    <% end %>

  <% else %>
    <div class="alert alert-warning">検索条件が不正です。</div>
  <% end %>
</div>
